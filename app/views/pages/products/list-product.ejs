<title>List Product | Admin Template</title>
<%- include('../../layout/header'); %>

<!-- content @s -->
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between g-3">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">List Products</h3>
                            <div class="nk-block-des text-soft">
                                <p>You have total <span class="text-base">1,257</span> products.</p>
                            </div>
                        </div>
                        <div class="nk-block-head-content">
                            <a href="#" class="btn btn-outline-light bg-white d-none d-sm-inline-flex"><em
                                    class="icon ni ni-download-cloud"></em><span>Export</span></a>
                            <a href="#" class="btn btn-icon btn-outline-light bg-white d-inline-flex d-sm-none"><em
                                    class="icon ni ni-download-cloud"></em></a>
                        </div>
                    </div>
                </div><!-- .nk-block-head -->
                <div class="nk-block">
                    <div class="card card-bordered card-stretch">
                        <div class="card-inner-group">
                            <div class="card-inner position-relative">
                                <div class="card-title-group">
                                </div><!-- .card-title-group -->
                                <div class="card-search search-wrap" data-search="search">
                                    <div class="card-body">
                                        <div class="search-content">
                                            <a href="#" class="search-back btn btn-icon toggle-search"
                                                data-target="search"><em class="icon ni ni-arrow-left"></em></a>
                                            <input type="text" class="form-control border-transparent form-focus-none"
                                                placeholder="Search by user or id">
                                            <button class="search-submit btn btn-icon"><em
                                                    class="icon ni ni-search"></em></button>
                                        </div>
                                    </div>
                                </div><!-- .card-search -->
                            </div><!-- .card-inner -->
                            <div class="card-inner p-0">
                                <div class="nk-tb-list nk-tb-ulist">
                                    <div class="nk-tb-item nk-tb-head">
                                        <div class="nk-tb-col nk-tb-col-check"><span>ID</span></div>
                                        <div class="nk-tb-col"><span>Name Product</span></div>
                                        <div class="nk-tb-col tb-col-md"><span>Category</span></div>
                                        <div class="nk-tb-col tb-col-md"><span>Service</span></div>
                                        <div class="nk-tb-col tb-col-mb"><span>Slug</span></div>
                                        <div class="nk-tb-col tb-col-lg"><span>Title</span></div>
                                        <div class="nk-tb-col tb-col-mb"><span>Featured</span></div>
                                        <div class="nk-tb-col tb-col-md"><span>Status</span></div>
                                        <div class="nk-tb-col tb-col-lg"><span>Checked By</span></div>
                                        <div class="nk-tb-col nk-tb-col-tools">&nbsp;</div>
                                    </div><!-- .nk-tb-item -->

                                    <% for (let product of data) { %>
                                    <div class="nk-tb-item">
                                        <div class="nk-tb-col nk-tb-col-check">
                                            <span class="tb-lead-sub"><%= product.id %></span>
                                        </div>
                                        <div class="nk-tb-col">
                                            <div class="user-card">
                                                <div class="user-info">
                                                    <span class="tb-date"><%= product.name %></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="nk-tb-col tb-col-md">
                                            <ul class="list-inline list-download">
                                                <% if (product.categories !== null){ %>
                                                <li><%= product.categories.name %><a href="#" class="popup"></a></li>
                                                <% }  %>
                                            </ul>
                                        </div>
                                        <div class="nk-tb-col tb-col-md">
                                            <ul class="list-inline list-download">
                                                <% if (product.services !== null){ %>
                                                <li><%= product.services.name %><a href="#" class="popup"></a></li>
                                                <% } %>
                                            </ul>
                                        </div>
                                        <div class="nk-tb-col tb-col-mb">
                                            <span class="tb-date"><%= product.slug %></span>
                                        </div>
                                        <div class="nk-tb-col tb-col-lg">
                                            <span class="tb-date"><%= product.title.substring(0,20); %></span>
                                        </div>
                                        <div class="nk-tb-col tb-col-md">
                                            <% if (product.hot == 1){ %>
                                            <span class="tb-status text-success">Yes</span>
                                            <% } else {%>
                                            <span class="tb-status text-danger">No</span>
                                            <% } %>
                                        </div>
                                        <div class="nk-tb-col tb-col-md">
                                            <% if (product.status == 1){ %>
                                            <span class="tb-status text-success">Show</span>
                                            <% } else {%>
                                            <span class="tb-status text-danger">Hidden</span>
                                            <% } %>
                                        </div>
                                        <div class="nk-tb-col tb-col-lg">
                                            <span class="tb-date"><%= product.users.username %></span>
                                        </div>
                                        <div class="nk-tb-col nk-tb-col-tools">
                                            <ul class="nk-tb-actions gx-1">
                                                <li>
                                                    <div class="drodown">
                                                        <a href="#" class="dropdown-toggle btn btn-icon btn-trigger"
                                                            data-toggle="dropdown"><em
                                                                class="icon ni ni-more-h"></em></a>
                                                        <div class="dropdown-menu dropdown-menu-right">
                                                            <ul class="link-list-opt no-bdr">
                                                                <li><a href="/product/<%= product.id %>"><em
                                                                            class="icon ni ni-eye"></em><span>View
                                                                            Details</span></a></li>
                                                                <li><a href="" data-id="<%= product.id %>"
                                                                        id="delete-product"><em
                                                                            class="icon ni ni-trash"></em><span>Delete</span></a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div><!-- .nk-tb-item -->
                                    <% } %>
                                </div>
                            </div><!-- .card-inner -->
                            <!-- <div class="card-inner">
                                    <ul class="pagination justify-content-center justify-content-md-start">
                                        <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><span class="page-link"><em
                                                    class="icon ni ni-more-h"></em></span></li>
                                        <li class="page-item"><a class="page-link" href="#">6</a></li>
                                        <li class="page-item"><a class="page-link" href="#">7</a></li>
                                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                    </ul>
                                </div> -->
                        </div><!-- .card-inner-group -->
                    </div><!-- .card -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
</div>
<!-- content @e -->
<!-- footer @s -->
<%- include('../../layout/footer'); %>

<script>
    $("a#delete-product").on('click', function (e) {
        var myid = $(this).attr('data-id');
        e.preventDefault();
        Swal.fire({
            title: 'Are you sure?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then(result => {
            if (result.isConfirmed) {
                window.location.assign("/delete-product/" + myid)
            }
        })
    })
</script>